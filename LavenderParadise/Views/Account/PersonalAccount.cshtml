
@using Tweb_lavender_paradise.Domain.Models
@{
    ViewBag.Title = "PersonalAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = Session["User"] as UserModel;
}
@using System.Collections.Generic
@model Tweb_lavender_paradise.Domain.Models.UserModel
@using Newtonsoft.Json


@Styles.Render("~/bundles/PersonalAccount/css")

@if (user == null)
{
    <text>Ошибка: пользователь не авторизован.</text>
    return;
}
<!-- Основной контент -->
<div class="container py-5">
    <div class="row">
        <!-- Профиль пользователя -->
        <div class="col-md-4">
            <div class="profile-section text-center">
                <div class="avatar-container">
                    <img src="@Url.Content($"../src/Avatar/{user?.AvatarPath}")" alt="Аватар пользователя" class="user-avatar" />

                </div>
                <h4 class="mb-3">@($"{user?.FirstName} {user?.LastName}")</h4>
                <span class="user-role mb-4">
                    Ваша роль - @($"{user?.Role}")
                </span>
                <div class="user-info mt-4">
                    <div class="user-info-item">
                        <i class="fas fa-envelope me-2"></i>
                        <span>@($"{user?.Email}")</span>
                    </div>
                    <div class="user-info-item">
                        <i class="fas fa-key me-2"></i>
                        <a href="#" class="text-decoration-none">Изменить пароль</a>
                    </div>
                </div>
            </div>

            <!-- Баланс -->
            <div class="balance-card">
                <h5>Баланс счета</h5>
                <h3 class="mb-0">₽ 5,400</h3>
                <small>Бонусные баллы: 240</small>
            </div>
        </div>

        <!-- История заказов -->
        <div class="col-md-8">
            <h4 class="mb-4">История заказов</h4>

            <!-- Заказ -->
            <div class="order-card">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Заказ #1234</h6>
                    <span class="badge bg-success">Доставлен</span>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-8">
                        <p class="mb-1">Эфирное масло лаванды (2 шт)</p>
                        <p class="mb-1">Спрей для подушки (1 шт)</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <p class="mb-1">Сумма: ₽ 3,290</p>
                        <small class="text-muted">15.01.2025</small>
                    </div>
                </div>
            </div>

            <!-- Заказ -->
            <div class="order-card">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Заказ #1189</h6>
                    <span class="badge bg-success">Доставлен</span>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-8">
                        <p class="mb-1">Массажное масло (1 шт)</p>
                    </div>
                    <div class="col-md-4 text-end">
                        <p class="mb-1">Сумма: ₽ 1,500</p>
                        <small class="text-muted">03.01.2025</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const modelData = @Html.Raw(JsonConvert.SerializeObject(Model));
    console.log("Данные модели:", modelData);
</script>