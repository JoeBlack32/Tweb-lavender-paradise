@{
    ViewBag.Title = "Детали продукта";
}

@using System.Collections.Generic
@model Tweb_lavender_paradise.Domain.Models.Product
@using Newtonsoft.Json

<section class="py-5 bg-light mt-5">
    <div class="container">
        <div class="category-section">
            <h3 class="category-title">Описание Продукта</h3>
            <div class="row">
                <div class="product-card">
                    <img src="@Model.ImgSrc" class="img-fluid" alt="@Model.GoodName">
                    <div class="card-body">
                        <h5 class="card-title">@Model.GoodName</h5>
                        <p class="card-text">@Model.GoodDescription</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="price-tag">₽ @Model.GoodPrice</span>
                        </div>
                    </div>
                    @if (ViewBag.UserRole != "Guest")
                    {
                        using (Html.BeginForm("AddToCart", "Product", FormMethod.Post))
                        {
                            <input type="hidden" name="productId" value="@Model.GoodCode" />
                            <button class="btn btn-primary" type="submit">Добавить в корзину</button>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const modelData = @Html.Raw(JsonConvert.SerializeObject(Model));
    console.log("Данные модели:", modelData);
</script>